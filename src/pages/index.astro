---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
const title = "Index";

const cards = [
  {
    id: 0,
    title: "Intervalos",
    desc: "Los intervalos son las distancias entre las diferentes notas de una escala musical. Se especifican en intervalos de primera, de segunda, etc...",
    link: "intervalos",
  },
  {
    id: 1,
    title: "Escalas musicales",
    desc: "Las escalas musicales son el conjunto de notas que expresan una musicalidad específica.",
    link: "escalas-musicales",
  },
  {
    id: 2,
    title: "Acordes",
    desc: "Conjunto de tres o más notas que tocadas al mismo tiempo crean la armonía. Se expresan igual que los intervalos: Acordes de primera, Acordes de quinta, etc...",
    link: "acordes",
  },
  {
    id: 3,
    title: "Círculo de quintas",
    desc: "Los intervalos son las distancias entre las diferentes notas de una escala musical. Se especifican en intervalos de primera, de segunda, etc...",
    link: "intervalos",
  },
  {
    id: 4,
    title: "Ritmo",
    desc: "Las escalas musicales son el conjunto de notas que expresan una musicalidad específica. La escala principal es la de Do Mayor. Son las 7 notas blancas que podemos encontrar en un piano en sus diferentes octavas.",
    link: "escalas-musicales",
  },
  {
    id: 5,
    title: "Piano",
    desc: "Utiliza el piano virtual",
    link: "piano",
  },
];
---

<Layout title={title}>
  <div class="container">
    <h1>{title}</h1>
    <div class="grid">
      {
        cards.map((card) => (
          <Card
            id={card.id}
            title={card.title}
            desc={card.desc}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: auto;
    padding: 1rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1rem;
  }
</style>
