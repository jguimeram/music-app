---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro"
const title = "Index";

---

<style>
  .container {
    max-width: 1200px;
	height: 100lvh;
    background-color: var(--primary-light);
    margin: auto;
	padding: 1rem;
  }
  .grid {
    display: grid;
	grid-template-columns: repeat(3,1fr);
	gap: 1rem;
  }

</style>

<Layout title={title}>
  <div class="container">
    <h1>{title}</h1>
    <div class="grid">
		<Card />
		<Card />
		<Card />
    </div>
  </div>
</Layout>
