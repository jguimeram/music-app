<style>
  .navbar {
    background-color: var(--primary-light);
    padding: 1rem;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
  }

  /* menu style */

  .menu {
    display: flex;
  }

  .menu li {
    margin-left: 1.5rem;
  }

  .menu li a {
    color: white;
    transition: color 0.3s;
  }

  .menu li a:hover {
    color: var(--accent-secondary);
  }

  .dropdown {
    position: relative;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    background-color: var(--primary-light);
    min-width: 160px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    left: 0;
  }

/* a tags inside of dropdown-content */

  .dropdown-content a {
    color: white;
    padding: 12px 16px;
    display: block;
  }

  .dropdown-content a:hover {
    background-color:  var(--border-color);
  }

  .dropdown:hover .dropdown-content{
    display: block;
  }


</style>

<nav class="navbar">
  <!-- display: flex -->
  <div class="nav-container">
